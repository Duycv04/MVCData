@model List<MVCData.Models.SanPham>
@{
    ViewData["Title"] = "Trang chủ";
}

<div class="container-fluid p-0">
    <div id="heroBanner"
         class="carousel slide carousel-fade"
         data-bs-ride="carousel"
         data-bs-interval="5000">

        <div class="carousel-indicators">
            <button type="button" data-bs-target="#heroBanner" data-bs-slide-to="0" class="active"></button>
            <button type="button" data-bs-target="#heroBanner" data-bs-slide-to="1"></button>
            <button type="button" data-bs-target="#heroBanner" data-bs-slide-to="2"></button>
        </div>

        <div class="carousel-inner">

            <div class="carousel-item active">
                <div class="banner-slide"
                     style="background-image:url('/image/banner1.jpg')">
                    <div class="banner-overlay"></div>

                    <div class="banner-content text-white text-center">
                        <h1 class="fw-bold">Công nghệ đỉnh cao</h1>
                        <p class="fs-5">Điện thoại chính hãng – Giá tốt nhất</p>
                        <a href="#products" class="btn btn-primary btn-lg">
                            Mua ngay
                        </a>
                    </div>
                </div>
            </div>

            <div class="carousel-item">
                <div class="banner-slide"
                     style="background-image:url('/image/banner2.jpg')">
                    <div class="banner-overlay"></div>

                    <div class="banner-content text-white text-center">
                        <h1 class="fw-bold">Sản phẩm mới 2026</h1>
                        <p class="fs-5">Hiệu năng mạnh – Camera đỉnh</p>
                        <a href="#products" class="btn btn-outline-light btn-lg">
                            Xem chi tiết
                        </a>
                    </div>
                </div>
            </div>

            <div class="carousel-item">
                <div class="banner-slide"
                     style="background-image:url('/image/banner3.jpg')">
                    <div class="banner-overlay"></div>

                    <div class="banner-content text-white text-center">
                        <h1 class="fw-bold">Ưu đãi cực sốc</h1>
                        <p class="fs-5">Giảm giá lên đến 30%</p>
                        <a href="#products" class="btn btn-danger btn-lg">
                            Săn sale
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#heroBanner" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>

        <button class="carousel-control-next" type="button" data-bs-target="#heroBanner" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>
</div>


<div class="container mb-5">
    <h4 class="fw-bold mb-4">Sản phẩm nổi bật</h4>

    <div class="row g-4">
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12">
                    <div class="card product-card h-100 border-0 shadow-sm">

                        <div class="position-relative">
                            <img src="/image/@item.ImageUrl"
                                 class="card-img-top p-3 product-img">

                            @if (item.Quantity > 0)
                            {
                                <span class="badge bg-success position-absolute top-0 end-0 m-2">
                                    Còn hàng
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-danger position-absolute top-0 end-0 m-2">
                                    Hết hàng
                                </span>
                            }
                        </div>

                        <div class="card-body d-flex flex-column">
                            <h6 class="fw-semibold text-truncate">
                                @item.ProductName
                            </h6>
                            <p class="text-danger fw-bold fs-5 mb-1">
                                @item.Price.ToString("N0") ₫
                            </p>

                            <div class="mt-auto d-grid gap-2">
                                <a asp-controller="SanPham"
                                   asp-action="SelectSp"
                                   asp-route-id="@item.ProductID"
                                   class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-eye"></i> Xem chi tiết
                                </a>

                                <button class="btn btn-primary btn-sm"
                                        @(item.Quantity == 0 ? "disabled" : "")>
                                    <i class="bi bi-cart-plus"></i> Thêm giỏ
                                </button>
                            </div>
                        </div>

                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-center text-muted">Chưa có sản phẩm</p>
        }
    </div>
</div>
